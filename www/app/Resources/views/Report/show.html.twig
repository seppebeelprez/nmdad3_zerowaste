{% extends '::base.html.twig' %}

{% block body -%}
    <div class="content_wrapper">
        <h1 class="mdl-layout__title mdl_layout_title_detail">Report {{ report.id }}: detailview</h1>
    </div>

    <div class="content_wrapper_mdl_grid">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet mdl-cell--8-col-phone">
                <div class="mdl-shadow--2dp">
                    <div class="mdl-card__title mdl_report_title_detail">
                        <h2 class="mdl-card__title-text">Posted by: <a class="posted_by_href" href="{{ url('users_show',{ 'id': report.user.id }) }}"> {{ report.user.username }}</a> </h2>
                    </div>
                    <div class="mdl-card__supporting-text mdl_report_supporting_text_detail">
                        <div class="mdl_report_supporting_text_detail_left">
                            <div><span>Send at:</span> {{ report.createdAt|date("d/m/Y") }}</div>
                            <div><span>Type:</span> {{ report.type }}</div>
                            <div><span>City:</span> {{ report.city }}</div>
                            <div><span>Postcode:</span> {{ report.postalcode }}</div>
                            <div><span>Longitude:</span> {{ report.longitude }}</div>
                            <div><span>Latitude:</span> {{ report.latitude }}</div>
                            <div><span>Status:
                                </span>
                                {% if report.status is null %}
                                {% else %}
                                    {{ report.status.name }}
                                {% endif %}
                            </div>
                            <div class="description_div"><span>Description:</span></div>
                            <div class="mdl_report_supporting_text_detail_left_description">{{ report.description
                            }}</div>
                        </div>

                        <div class="mdl_report_supporting_text_detail_right">
                            <div class="mdl-card__title mdl_report_image_detail">
                                <img src="{{ report.uri }}" alt=""/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="fixed-action-btn horizontal click-to-toggle">
        <a class="btn-floating btn-large red">
            <i class="material-icons">more_horiz</i>
        </a>
        <ul>
            <li><a href="{{ url('reports_delete',{ 'id': report.id }) }}" class="btn-floating list"><i
                            class="material-icons">delete</i></a></li>
            <li><a href="{{ url('reports_edit',{ 'id': report.id }) }}" class="btn-floating list"><i
                            class="material-icons">mode_edit</i></a></li>
            <li><a href="{{ url('reports') }}" class="btn-floating list"><i class="material-icons">view_list</i></a></li>
        </ul>
    </div>
{% endblock %}